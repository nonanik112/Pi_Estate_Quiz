@model Pi_Estate.Models.Ilan
@{
    ViewData["Title"] = "Detay";
}

<!DOCTYPE html>
<html lang="en">

<body>
    

    <div class="container">
        <div class="row">
            <!--Slider-->
            <div class="col-md-8">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner" role="listbox">
                        @{int i = 0;}
                        @foreach (var item in ViewBag.imgs)
                        {
                              i++;
                            var active = i ==1 ? "active" : "";
                            <div class="@active">
                                <img src="/emlak_resim/@item.ResimName" style="width:1150px; height:600px;" alt="...">
                            </div>
                        }

                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-md-4">
                <table class="table table-bordered">
                    <tbody>
                        <tr> <th colspan="2"> İlan Özellikleri</th></tr>
                        <tr><td><strong> Açıklama</strong></td><td>@Model.Açıklama</td> </tr>
                        <tr><td><strong> Fiyat</strong></td><td>@Model.Fiyat</td> </tr>
                        <tr><td><strong> Durum</strong></td><td>@Model.Tip.Durum.DurumName</td> </tr>
                        <tr><td><strong> Tip</strong></td><td>@Model.Tip.TipName</td> </tr>
                        <tr><td><strong> Alan</strong></td><td>@Model.Alan m<sup>2</sup></td> </tr>
                        <tr><td><strong> Oda Sayısı</strong></td><td>@Model.OdaSayisi</td> </tr>
                        <tr><td><strong> Banyo Sayısı</strong></td><td>@Model.BanyoSayisi</td> </tr>
                        <tr><td><strong> Kat</strong></td><td>@Model.Kat</td> </tr>
                        <tr><td><strong> Adres</strong></td><td>@Model.Adres</td> </tr>
                        <tr><td><strong>Mahalle</strong></td><td>@Model.Mahalle.MahalleName</td></tr>
                        <tr><td><strong>Semt</strong></td><td>@Model.Mahalle.Semt.SemtName</td></tr>
                        <tr><td><strong>Şehir</strong></td><td>@Model.Mahalle.Semt.Sehir.SehirName</td></tr>
                        <tr>
                            <td><strong>KREDİ</strong></td>
                            <td>
                                @if (Model.Kredi == true)
                                {
                                    <label class="col-form-label label-success">EVET</label>
                                }
                                else
                                {
                                    <label class="col-form-label label-danger">HAYIR</label>
                                }
                            </td>
                        </tr>
                        <tr><td><strong>İLEİTİŞİM NUMARASI</strong></td><td><button class="btn btn-success btn-block"><i class="fas fa-phone"></i>@Model.Telefon</button></td></tr>

                    </tbody>
                </table>
            </div>
        </div>
      
    </div>

    
</body>
</html>
